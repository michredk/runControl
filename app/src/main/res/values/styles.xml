<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_stroke">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/strokeColor</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="small_text">
        <item name="android:textColor">@color/mediumGray2</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ColumnChartColumnChartStyle">
        <item name="column1">@style/ColumnChartColumn1</item>
    </style>

    <style name="ColumnChartColumn1">
        <item name="color">@color/colorSecondary</item>
        <item name="thickness">16dp</item>
    </style>

    <style name="ColumnChartAxisStyle">
        <item name="horizontalAxisTickPosition">center</item>
        <item name="horizontalAxisTickOffset">1</item>
        <item name="horizontalAxisTickSpacing">3</item>
    </style>

</resources>